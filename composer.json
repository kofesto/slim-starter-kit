{
    "name": "ravikumar8/slim-starter-kit",
    "description" : "Starter kit for Slim micro framework to write powerful web applications and APIs",
    "keywords": ["framework","micro","api","router","starter"],
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Ravi Kumar",
            "email": "webloper@gmail.com"
        }
    ],
    "autoload": {
        "classmap": [
            "database"
        ],
        "psr-4": {
            "App\\": "app"
        }
    },
    "require": {
        "slim/slim": "^3.4",
        "slim/twig-view": "^2.1",
        "monolog/monolog": "^1.20",
        "illuminate/database": "^5.2",
        "vlucas/phpdotenv": "^2.3",
        "slim/flash": "^0.1.0",
        "slim/csrf": "^0.7.0"
    },
    "scripts": {
        "post-root-package-install": [
            "php -r \"copy('.env.example', '.env');\""
        ]
    },
}
